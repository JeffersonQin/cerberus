{- The two non-atomic loads do *not* race. The only allowed result
    is 0.
-}

{-
fun main () : [integer] :=
  x <- create(signed int);
  store(signed int, x, 0);
  {{{
       load(signed int, x)
  |||
       load(signed int, x)
  }}};
  kill(x);
  ret 0
-}
fun main () : [integer] :=
  let strong x = create(<alignof>("signed int"), "signed int") in
  let strong _ = store("signed int", x, 0) in
  let strong _ = par(
    let strong _ = load("signed int", x) in
    return (unit)
    end
  ,
    let strong _ = load("signed int", x) in
    return (unit)
    end
  ) in
  let strong _ = kill(x) in
  return(0)
  end end end end
