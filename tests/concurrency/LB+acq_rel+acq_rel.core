{- LB+acq_rel+acq_rel
   Load Buffering, with acquire/release pairs
   The values of a1 and a2 cannot both be 1. They can be both 0, or one of them can be 1.
   An exhaustive execution of this program should therefore return the values 0, 1 and 2.
-}

fun main () : [integer] :=
  x <- create({- _Atomic( -} signed int{- ) -});
  y <- create({- _Atomic( -} signed int{- ) -});
  {{{
       a1 <- load(signed int, x, acquire);
       store(signed int, y, 1, release)
  |||
       a2 <- load(signed int, y, acquire);
       store(signed int, x, 1, release)
  }}};
  kill(x);
  kill(y);
  ret a1 + (2 * a2)
