open Global

type cabsloc = <|
  lineno : num;
  filename: string;
  byteno: num;
  ident : num
|>

type location = Location.t


(* 6.4.4.1 Integer constants *)
type integer_suffix =
  | SUFFIX_UNSIGNED
  | SUFFIX_UNSIGNED_LONG
  | SUFFIX_UNSIGNED_LONG_LONG
  | SUFFIX_LONG
  | SUFFIX_LONG_LONG
type integer_constant = num * option integer_suffix


(* 6.4.4 Constants *)
type constant =
  | CONST_INT of integer_constant
(*  | CONST_FLOAT of string (* the textual representaton *) (* LATER *) *)
(* NOT USED, see REMARK in Cparser.constant  | CONST_ENUM of string (* 6.4.4.3 Enumeration constants *) *)
(*
(* TODO *)
  | CONST_CHAR of int64 list
  | CONST_WCHAR of int64 list
*)


(* 6.4.5 String literals *)
type encoding_prefix =
  | ENCODING_u8
  | ENCODING_u
  | ENCODING_U
  | ENCODING_L
type string_literal = option encoding_prefix * string


(* -- EXPRESSIONS -- *)
(* Part of the binary operators (also used as the assignment operators) *)
type arithmetic_operator =
  (* 6.5.5 Multiplicative operators *)
  | MUL | DIV | MOD
  (* 6.5.6 Additive operators *)
  | ADD | SUB
  (* 6.5.7 Bitwise shift operators *)
  | SHL | SHR
  (* 6.5.10 Bitwise AND operator *)
  | BAND
  (* 6.5.11 Bitwise exclusive OR operator *)
  | XOR
  (* 6.5.12 Bitwise inclusive OR operator *)
  | BOR

(* Binary operators from 6.5.5-14, 6.5.17 *)
type binary_operator =
  (* Group of operators also used for assigments *)
  | ARITHMETIC of arithmetic_operator
  (* 6.5.17 Comma operator *)
  | COMMA
  (* 6.5.13 Logical AND operator *)
  | AND
  (* 6.5.14 Logical OR operator *)
  | OR
  (* 6.5.8 Relational operators *)
  | LT | GT | LE | GE
  (* 6.5.9 Equality operators *)
  | EQ | NE

type unary_operator =
  (* from 6.5.2 Postfix operators *)
  | POSTFIX_INCR | POSTFIX_DECR
  (* 6.5.3 Unary operators *)
  | PREFIX_INCR | PREFIX_DECR
  | ADDRESS | INDIRECTION | PLUS | MINUS | BNOT | NOT







(* 6.7.1 Storage-class specifiers *)
type storage_class =
  | TYPEDEF
  | EXTERN
  | STATIC
  | THREAD_LOCAL
  | AUTO
  | REGISTER

(* 6.7.2 Type specifiers *)
type qualifier =
  | CONST
  | RESTRICT
  | VOLATILE
  | ATOMIC

type specifier =
  | VOID
  | CHAR
  | SHORT
  | INT
  | LONG
(*  | FLOAT *)
(*  | DOUBLE *)
  | SIGNED
  | UNSIGNED
  | BOOL
(*  | COMPLEX *)
  | STRUCT of option string * list struct_union_declaration (* TODO: STRUCT_HACK *)
  | UNION of option string * list struct_union_declaration (* TODO: STRUCT_HACK *)
(* TODO: enum-specifier *)
(* TODO: typedef-name *)

and specifiers = multiset specifier
and qualifiers = set qualifier

and c_type =
  | BASE of qualifiers * specifiers
  | ARRAY of qualifiers * c_type * option exp_l
  | POINTER of qualifiers * c_type
  | FUNCTION of c_type * list decl_l
  | ENUM of string

and expression =
  (* 6.5.1 Primary expressions *)
  | IDENTIFIER of string
  | CONSTANT of constant
  | STRING_LITERAL of string_literal
  | GENERIC_SELECTION of exp_l * list generic_association_l
  (* 6.5.2.1 Array subscripting *)
  | SUBSCRIPT of exp_l * exp_l
  (* 6.5.2.2 Function call *)
  | CALL of exp_l * list exp_l
  (* 6.5.2.3 Structure and union members *)
  | MEMBEROF of exp_l * string
  | MEMBEROFPTR of exp_l * string
  (* 6.5.2.5 Compound literals *)
(* (* TODO *)
  | COMPOUND_LITERAL of (specifier * c_type) * init_expression
*)
  (* Unary operators from 6.5.2 and 6.5.3 *)
  | UNARY of unary_operator * exp_l
  (* 6.5.3.4 The sizeof and alignof operators *)
  | TYPE_SIZEOF of c_type (* TODO: sizeof can have an 'unary-expression' as argument *)
  | TYPE_ALIGNOF of c_type
  (* 6.5.4 Cast operators *)
  | CAST of c_type * exp_l
  (* Binary operators from 6.5.5-14 and 6.5.17 *)
  | BINARY of binary_operator * exp_l * exp_l 
  (* 6.5.15 Conditional operator *)
  | CONDITIONAL of exp_l * exp_l * exp_l
  (* 6.5.16 Assignment operators *)
  | ASSIGN of option arithmetic_operator * exp_l * exp_l

and generic_association =
  | TYNAME_ASSOC of c_type * exp_l
  | DEFAULT_ASSOC of exp_l

and generic_association_l = generic_association * location

and exp_l = expression * location

(* TODO: STRUCT_HACK *)
and struct_union_declarator =
  | STRUCT_DECL of string * (c_type -> c_type)
  | BITFIELD of option (string * (c_type -> c_type)) * exp_l
and struct_union_declaration = specifiers * qualifiers * list struct_union_declarator

and enum_specifier =
  | ENUM_SPEC of option string * list (option expression)


and declaration = string * c_type * list storage_class
and decl_l = declaration * location
and definition = decl_l * option exp_l
and defn_l = definition * location

type statement =
  | SKIP
  | EXPRESSION of exp_l
  | BLOCK of list stmt_l
  | IF of exp_l * stmt_l * option stmt_l
  | WHILE of exp_l * stmt_l
  | DO of exp_l * stmt_l
  | FOR_EXP of option exp_l * option exp_l * option exp_l * stmt_l
  | FOR_DECL of list defn_l * option exp_l * option exp_l * stmt_l
  | BREAK
  | CONTINUE
  | RETURN of option exp_l
  | SWITCH of exp_l * stmt_l
  | CASE of exp_l * stmt_l
  | DEFAULT of stmt_l
  | LABEL of string * stmt_l
  | GOTO of string
  | DECLARATION of list defn_l
  | PAR of list stmt_l (* TODO: (temporary) adding cppmem's parallel composition *)

and stmt_l = statement * location

type global_definition =
  | FUNCTION_DEFINITION of decl_l * stmt_l
  | EXTERNAL_DECLARATION of list defn_l
  | STRUCT_ (* TODO: struct *)

type g_defn_l = global_definition * location

(* file name, list of toplevel definitions *)
type file = string * list g_defn_l
