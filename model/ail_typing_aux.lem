let promote_int (i: Ail.integer_type) =
  let promoted_i =
    if leq_rank i (SIGNED INT) then
      if leq_integer_precision i (SIGNED INT) then
        SIGNED INT
      else UNSIGNED INT
    else
      i
  in
  match i with
  | SIGNED   INT -> i
  | UNSIGNED INT -> i
  (* "Other than unsigned int or signed int." *)
  | BOOL       -> promoted_i
  | SIGNED   _ -> promoted_i
  | UNSIGNED _ -> promoted_i
  end



