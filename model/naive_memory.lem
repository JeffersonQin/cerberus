  | PVnull _ ->
      SEU.fail $ MerrOther "Mem.load saw a null pointer"
  | ptr_val ->
      begin_timing "Mem.load" >>
      SEU.read (fun st -> st.memWrites) >>=
      combineWrites (MemReadRequest ptr_val ty) >>= fun ret ->
      end_timing () >>
      SEU.return ret
end




