type memory_error =
  | MemErr_TODO

type memory_state =
  Map.map Cmm.location (list (Cmm.cvalue * taction_id)) * natural


(* Memory effect *)
type t 'a =
  E.t 'a memory_state memory_error


type mem_addr =
  Cmm.location






let create pref ty taid =
  E.modify (fun (m, i) ->
    let o = (pref, Cmm_aux_old.Lbase i) in
    let init = match ty with
      | Array _ n -> Cmm_aux_old.Marray (replicate_list Cmm_aux_old.Muninit n)
      | _         -> Cmm_aux_old.Muninit
    end in
    (o, (Map.insert o [(init, taid)] m, i+1))
  )


