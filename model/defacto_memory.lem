val     mkUnspec: ctype -> mem_value
let rec mkUnspec ty =
  match ty with
    | (Basic _ as ty) ->
        MVunspecified ty
    | Array ty (Just n) ->
        MVarray $ replicate (natFromInteger n) (mkUnspec ty)
    | (Pointer _ _ as ty) ->
        MVunspecified ty
    | (Atomic _ as ty) ->
        MVunspecified ty
    | Struct tag ->
        MVstruct tag $ map (fun (ident, ty) -> (ident, mkUnspec ty)) (get_membersDefs tag)
    | (Union _ as ty) ->
        MVunspecified ty
    | (Builtin _ as ty) ->
        MVunspecified ty
    | _ ->
        error "Mem.mkUnspec: invalid type"
  end



